<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%date{yyyy-MM-dd HH:mm:ss.SSS}] %-5level \(%thread\) [%logger\(%line\) -> %method] %message%n</pattern>
		</encoder>
	</appender>

	<root level="DEBUG">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>